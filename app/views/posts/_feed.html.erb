<div class="column is-half">
  <%# <% if user_signed_in? %>
  <article class="media box">
    <figure class="media-left">
      <p class="image is-64x64">
        <img src="https://bulma.io/images/placeholders/64x64.png">
      </p>
    </figure>
    <div class="media-content">
      <%= render 'posts/form' %>
    </div>
  </article>
  <%# <% end %>

  <% @posts.each do | post | %>
    <div class="box">
      <article class="media">
        <div class="media-left">
          <figure class="image is-64x64">
            <img src="https://bulma.io/images/placeholders/64x64.png">
          </figure>
        </div>
        <div class="media-content">
            <% if user_signed_in? %>
              <nav class="level">
                <div class="content">
                    <strong><%= post.user.username %></strong><br />
                    <p><%= post.post %></p>
                </div>
                <% if current_user.id == post.user_id %>
                  <div class="level-left is-mobile">
                    <%= link_to post, class: "level-item" do %>
                      <span class="icon"><i class="fa fa-link" aria-hidden="true"></i></span>
                    <% end %>
                    <%= link_to edit_post_path(post), class: "level-item" do %>
                      <span class="icon"><i class="fa fa-pencil" aria-hidden="true"></i></span>
                    <% end %>
                    <%= button_to(post, method: :delete, form: {data: {turbo_confirm: 'Are you sure?'}}) do %>
                        <span class="icon"><i class="fa fa-trash" aria-hidden="true"></i></span>
                    <% end %>
                  </div>
                <% end %> 
              </nav>
            <% else %>
              <nav class="level">
                <div class="content">
                  <strong>anonymous</strong><br />
                  <p><%= post.post %></p>
                </div>
              </nav>
            <% end %>
        </div>
      </article>
    </div>
  <% end %>
</div>